<section>

  <h3>{{sectionTitle}}</h3>

  <form>
      {{!--become red if the number is more than the max value set in the js file linked to this component--}}
    <p class=" {{unless isCounterValid 'has-error'}}">
      <label class="control-label">Number of new records:</label>
      {{input value=counter class='form-control' placeholder=placeholder}}
    </p>
    
    {{!--is disabled if the number is more than the max value--}}
    <button class="btn btn-primary" {{action 'generateAction'}} disabled={{if isCounterValid false true}}>
        Generate {{sectionTitle}}
    </button>
    {{!--call the fadel-label component to show a message when the data are sent--}}
    {{#fader-label isShowing=createReady}}Created!{{/fader-label}}
    
    <button class="btn btn-danger" {{action 'deleteAction'}}>
        Delete All {{sectionTitle}}
    </button>
    {{#fader-label isShowing=deleteReady}}Deleted!{{/fader-label}}
  
  </form>
</section>