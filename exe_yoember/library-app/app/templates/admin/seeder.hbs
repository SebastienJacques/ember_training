<h1>Seeder, our Data Center</h1>

<section>
    {{!--call the number-box component and passe the title and the size of the collection to it--}}
    <article>{{number-box title="Libraries" number=libraries.length}}</article>
    <article>{{number-box title="Authors" number=authors.length}}</article>
    <article>{{number-box title="Books" number=books.length}}</article>
</section>

{{seeder-block
    sectionTitle='Libraries'
    generateAction='generateLibraries'
    deleteAction='deleteLibraries'
    createReady=libDone
    deleteReady=libDelDone}}

{{seeder-block
    sectionTitle='Authors with Books'
    generateAction='generateBooksAndAuthors'
    deleteAction='deleteBooksAndAuthors'
    createReady=authDone
    deleteReady=authDelDone}}